<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('../partials/head', {title: 'Detalle de Producto'}) %>
    <link rel="stylesheet" href="/css/styles-p-d.css" />
    <script src="/js/deleteButton.js" defer></script>
  </head>

  <body>
    <%- include("../partials/header") %>
    <main>
      <div class="product">
        <div class="product-image">
          <% if (product && product.image) { %>
          <img
            src="/images/products/<%= product.image %>"
            alt="imagen <%= product.name %>"
          />
          <% } %>
        </div>
        <div class="product-details">
          <% if (product && product.name) { %>
          <h1><%= product.name %></h1>
          <% } %> <% if (product && product.price) { %>
          <p class="price">$<%= product.price %></p>
          <% } %> <% if (product && product.description) { %>
          <p class="description"><%= product.description %>.</p>
          <% } %>

          <div class="product-actions">
            <button class="add-to-cart">Agregar al Carrito</button>
            <button class="buy-now">Comprar Ahora</button>
          </div>
        </div>
        <div <% if (!user_admin) { %>
          class="display-none" <% } %>>
          <hr />
          <div style="display: flex; justify-content: space-around">
            <% if (product && product.id) { %>

            <a href="/products/edit/<%= product.id %>" class="product-actions"
              ><button class="edit-product">Editar Producto</button></a
            >

            <a href="/products/create" class="product-actions"
              ><button class="edit-product">Crear Producto</button></a
            >

            <form
              action="/products/<%= product.id %>?_method=delete"
              method="POST"
              class="product-actions"
              id="deleteForm"
            >
              <button type="submit" class="delete-product">
                Eliminar Producto
              </button>
            </form>
            <% } %>
          </div>
        </div>
      </div>
    </main>
